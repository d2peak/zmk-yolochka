#include <dt-bindings/zmk/matrix_transform.h>
#include <dt-bindings/led/led.h>

#include "yolochka-layouts.dtsi"

&mini36_layout {
    transform = <&yolochka_36_transform>;
};

/ {
    model = "Yolochka";
    compatible = "aroum,yolochka";

    chosen {
        zmk,kscan = &kscan0;
        zmk,physical-layout = &mini36_layout;
        zmk,backlight = &backlight;
	};

yolochka_36_transform: keymap_transform_0 {
	compatible = "zmk,matrix-transform";
	columns = <6>;
	rows = <7>;

        map = <
            RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4)   RC(6,4) RC(6,3) RC(6,2) RC(6,1) RC(6,0) 
            RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4)   RC(5,4) RC(5,3) RC(5,2) RC(5,1) RC(5,0) 
            RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4)   RC(4,4) RC(4,3) RC(4,2) RC(4,1) RC(4,0) 
                            RC(3,0) RC(3,1) RC(3,2)   RC(3,4) RC(3,5) RC(3,6)
        >;
    };

    kscan0: kscan_0 {
        compatible = "zmk,kscan-gpio-matrix";
        label = "KSCAN";
        diode-direction = "col2row";
        wakeup-source;

        col-gpios = 
            <&pro_micro 15 GPIO_ACTIVE_HIGH>,
            <&pro_micro 7 GPIO_ACTIVE_HIGH>,
            <&pro_micro 6 GPIO_ACTIVE_HIGH>,
            <&pro_micro 3 GPIO_ACTIVE_HIGH>,
            <&pro_micro 4 GPIO_ACTIVE_HIGH>,
            <&pro_micro 5 GPIO_ACTIVE_HIGH>;

        row-gpios = 
            <&pro_micro 1 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,
            <&pro_micro 0 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,
            <&pro_micro 2 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,
            <&pro_micro 18 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,
            <&pro_micro 19 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,
            <&pro_micro 20 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,
            <&pro_micro 21 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>;
    };
};
